<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editarmiperfil.EditarMiPerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Mi Perfil"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_editar_mi_perfil"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/idEditarMiPerfilImageViewFotoPerfil"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_tomar_foto"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre(s)"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:layout_marginRight="6dp"/>

                        <EditText
                            android:id="@+id/idEditarMiPerfilEditTextNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Daniel"
                            android:focusable="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellidos"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:layout_marginRight="6dp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/idEditarMiPerfilEditTextApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Sánchez Pedraza"
                            android:focusable="true"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/idEditarMiPerfilEditTextTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="722123456"
                        android:focusable="true"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/idEditarMiPerfilEditTextPais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="México"
                        android:text="México"
                        android:enabled="false"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="@color/black"/>

                    <Spinner
                        android:id="@+id/idEditarMiPerfilSpinnerEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="true"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código Postal"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/idEditarMiPerfilEditTextCodigoPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="50000"
                        android:focusable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Domicilio"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/idEditarMiPerfilEditTextDomicilio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Colonia San Cristobal"
                        android:focusable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Género"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black"/>

                    <RadioGroup
                        android:id="@+id/idEditarMiPerfilRadioGroupGenero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/idEditarMiPerfilRadioButtonMasculino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masculino" />

                        <RadioButton
                            android:id="@+id/idEditarMiPerfilRadioButtonFemenino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Femenino" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Nacimiento"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/idEditarMiPerfilEdiTextFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="12/12/1999"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/idEditarMiPerfilButtonRegistrar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Guardar Cambios"
                        android:layout_marginHorizontal="2dp"
                        android:backgroundTint="@color/azul"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>